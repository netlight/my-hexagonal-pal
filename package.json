    "cors": "^2.8.5",
    "currency.js": "^2.0.4",
    "dotenv": "^17.2.1",
    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "express-async-errors": "^3.1.1",
    "express-async-handler": "^1.2.0",
    "express-openapi-validator": "^5.5.7",
    "express-winston": "^4.2.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "mongoose": "^8.16.5",
    "openapi-typescript": "^7.8.0",
